<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.collegex2.StudentProfile"
    tools:showIn="@layout/activity_student_profile">


    <Button
        android:id="@+id/chat"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="#54C6D8"
        android:freezesText="true"
        android:text="Chat"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="454dp" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_weight="3"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="160dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:ems="100"
            android:typeface="serif"
            android:text="Jason"
            android:gravity="center"
            android:background="transparent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:gravity="top|center"
            android:inputType="none"
            android:text="Duke University"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:typeface="serif"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:ems='100'
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text='I am Jason from Duke. I am a fantastic boi.'
            android:textSize="15sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="156dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="394dp"
        android:layout_height="122dp"
        android:layout_marginLeft="-26dp"
        android:background="@drawable/background"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:background="@drawable/backarrow"
            android:layout_height="30dp"/>


    </FrameLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/jingchao"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="1dp" />

</android.support.constraint.ConstraintLayout>
