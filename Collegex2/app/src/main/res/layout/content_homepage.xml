<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tech.collegex2.homepage"
    tools:showIn="@layout/activity_homepage">

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:background="@drawable/backarrow"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="50dp">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="University"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/duke"
                android:layout_width="90dp"
                android:background="@drawable/dukebadge"
                android:layout_height="100dp"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Duke University\n"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/U_4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Stanford University\n"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/U_1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Princeton University\n"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LAC"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/LAC_1" />

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Williams College\n"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/LAC_2" />

            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Amherst College\n"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/LAC_3" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Swarthmore College\n"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="57dp"
        android:gravity="bottom"
        android:weightSum="3"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="510dp"
        android:background="#28ecf1">

        <FrameLayout
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/eye"
                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/home"

                android:layout_gravity="center"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/person"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
